<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light application theme. -->
    <style name="Theme.GTFConnect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/background_app</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_app</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>


    <style name="chatImageReceived" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/roundedMentorImageViewReceived</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedMentorImageViewSent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_10sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_18sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_18sdp</item>
    </style>


    <style name="roundedMentorImageViewReceived">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_18sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_10sdp</item>
        <item name="cornerSizeTopRight">@dimen/_18sdp</item>
    </style>


    <style
        name="tabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>


    <style
        name="profileTabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>


    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_rounded_dialog</item>
    </style>

    <style name="ChatContainerTheme">
        <item name="backgroundColor">@color/theme_light_blue</item>
    </style>

    <style name="my_popup_style" parent="">
        <item name="android:windowEnterAnimation">@anim/emoji_slider_in</item>
        <item name="android:windowExitAnimation">@anim/emoji_slider_out</item>
    </style>
</resources>