<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chat_background2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:background="#fff"
            android:src="@drawable/bot2"/>

        <LinearLayout
            android:layout_marginStart="@dimen/_14sdp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/firstName"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lina"
                android:textFontWeight="500"
                android:textColor="@color/theme_green"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/montserrat"/>


                <TextView
                    android:id="@+id/lastName"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harper"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:textFontWeight="500"
                    android:textColor="@color/theme_green"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/montserrat"/>
            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_3sdp"
                android:text="Today 10.30 am"
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/text_view2"
                android:fontFamily="@font/montserrat"
                android:gravity="center" />

        </LinearLayout>

        <ImageView
            android:id="@+id/bottomsheet_chat_option"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="match_parent"
            android:src="@drawable/dots"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:alpha=".2"
        android:layout_marginHorizontal="@dimen/_16sdp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_16sdp">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_10ssp"
        android:textColor="#666666"
        android:text="half join and then pay full Regarding Primium Membership in Lowest price,
more then 1000 top most trading courses+ daily or weekly"
        android:maxLines="3"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expand_message"
        android:text="See More"
        android:visibility="gone"
        android:layout_below="@id/message"
        android:layout_alignParentEnd="true"
        android:textColor="@color/theme_green"
        android:fontFamily="@font/montserrat"
        android:textSize="@dimen/_8ssp"
        android:layout_gravity="end"
        />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/post_image_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginHorizontal="@dimen/_16sdp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/single_post_image_container"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_6sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="centerCrop"
            />

            <ImageView
                android:id="@+id/play_video"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/play_circle"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dual_post_image_container"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_6sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/dual_post1"
                    android:background="@color/black"
                    android:scaleType="centerCrop"
                    />

                    <ImageView
                        android:id="@+id/play_video1"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/play_circle"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/dual_post2"
                        android:background="@color/black"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:id="@+id/play_video2"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/play_circle"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/multi_post_image_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_6sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/multi_post1"
                    android:background="@color/black"
                    android:scaleType="centerCrop"
                    />

                    <ImageView
                        android:id="@+id/play_video3"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/play_circle"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/multi_post2"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:scaleType="centerCrop"
                        />

                        <ImageView
                            android:id="@+id/play_video4"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/play_circle"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"
                        app:dividerColor="@color/white"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/multi_post3"
                        android:background="@color/black"
                        android:scaleType="centerCrop"
                        />

                        <ImageView
                            android:id="@+id/play_video5"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/play_circle"
                            android:layout_centerInParent="true"/>

                        <TextView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="+1"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/_24ssp"
                            android:gravity="center"
                            android:id="@+id/additional_image_count"
                            android:background="#4D2FB463"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>





    <LinearLayout
        android:id="@+id/quote_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quote_icon"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/quote"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_gravity="center"
            app:tint="@color/theme_green" />


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/quote_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            app:dividerColor="@color/theme_green"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/quote_msg_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/theme_green"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:text="Quote"/>

            <TextView
                android:id="@+id/old_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginVertical="@dimen/_2sdp"
                android:fontFamily="@font/poppins"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="@dimen/_9sdp"
                android:gravity="center_vertical"
                android:textColor="#B3666666"
                android:text="reply testing"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/old_msg_user"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textColor="#80666666"
                    android:textSize="@dimen/_9sdp"
                    android:text="Lisa Harper, "/>


                <TextView
                    android:id="@+id/old_msg_time"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="@dimen/_2sdp"
                    android:textColor="#80666666"
                    android:textSize="@dimen/_9sdp"
                    android:text="Today at 10.30 am"/>


            </LinearLayout>

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/small_quote_divider"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="1dp"
                android:alpha=".6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/new_message"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:textColor="#666666"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="Quote Message from "/>


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/read_check"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_gravity="start"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/double_tick"
                    app:tint="@color/theme_green" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/comment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                app:dividerColor="@color/theme_green"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/comment"
                        android:layout_marginHorizontal="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/view_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="View Comments"
                        android:fontFamily="@font/open_sans"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_2sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/comment_count"
                        android:text="(2k)"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/open_sans"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"/>

                    <RelativeLayout
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/emoji_layout"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/emoji1"
                                android:layout_width="@dimen/_14sdp"
                                android:padding="@dimen/_2sdp"
                                android:background="@drawable/emoji_circle"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="-6dp"
                                android:src="@drawable/emoji"/>

                            <ImageView
                                android:layout_marginEnd="-6dp"
                                android:layout_toEndOf="@id/emoji1"
                                android:padding="@dimen/_2sdp"
                                android:id="@+id/emoji2"
                                android:layout_width="@dimen/_14sdp"
                                android:background="@drawable/emoji_circle"
                                android:layout_height="match_parent"
                                android:src="@drawable/emoji"/>

                            <ImageView
                                android:id="@+id/emoji3"
                                android:layout_toEndOf="@id/emoji2"
                                android:padding="@dimen/_2sdp"
                                android:layout_width="@dimen/_14sdp"
                                android:background="@drawable/emoji_circle"
                                android:layout_height="match_parent"
                                android:src="@drawable/emoji"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="234"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:fontFamily="@font/open_sans"
                            android:gravity="center"
                            android:layout_toEndOf="@id/emoji_layout"/>

                    </RelativeLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:id="@+id/comments"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_green"
            android:text="Load More"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_8sdp"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha=".2"/>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:background="@android:color/transparent">

            <LinearLayout
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="match_parent"
                app:tint="@color/switch_grey"
                android:src="@drawable/reply"/>

            <TextView
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/reply"
                android:textColor="@color/theme_green"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/like"
                android:layout_toEndOf="@id/reply"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/like_thumb"
                app:tint="@color/switch_grey" />

            <ImageView
                android:layout_toStartOf="@id/view_count"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_4sdp"
                android:src="@drawable/views"
                app:tint="@color/icon_grey" />

            <TextView
                android:id="@+id/view_count"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_gravity="center_vertical|end"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="70"/>

        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:alpha=".3"
        android:layout_height="@dimen/_4sdp"/>

</LinearLayout>