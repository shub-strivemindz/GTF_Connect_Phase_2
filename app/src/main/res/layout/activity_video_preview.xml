<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:background="@color/groupChannelActionBarBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:paddingHorizontal="@dimen/_16sdp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_click"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            app:tint="@color/groupChannelActionBarTextColor"
            android:src="@drawable/back2" />

        <TextView
            android:layout_marginStart="@dimen/_8sdp"
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_12ssp"
            android:textFontWeight="600"
            android:layout_centerInParent="true"
            android:text="Preview"
            android:textColor="@color/groupChannelActionBarTextColor"
            />

    </RelativeLayout>



    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/search_container"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        app:controller_layout_id="@layout/custom_controller"
        app:hide_on_touch="true"
        app:resize_mode="fit"
        app:show_timeout="5000"
        app:surface_type="texture_view" />



    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:elevation="@dimen/_8sdp"
        android:background="@color/sendMessageDialogBackgroundColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/send_message"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/send_message"
            android:layout_alignParentEnd="true"/>

        <LinearLayout
            android:id="@+id/footer_search_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_32sdp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardElevation="0dp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardBackgroundColor="@color/sendMessageEditTextBackgroundColor"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/message_text_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/type"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:hint="Add a caption..."
                            android:fontFamily="@font/poppins"
                            android:textSize="@dimen/_10ssp"
                            android:paddingStart="@dimen/_6sdp"
                            android:textColor="@color/sendMessageTextColor"
                            android:textColorHint="@color/sendMessageTextColor"
                            android:background="@color/sendMessageEditTextBackgroundColor"/>

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>