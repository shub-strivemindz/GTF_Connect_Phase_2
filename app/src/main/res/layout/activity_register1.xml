<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background">

    <RelativeLayout
        android:layout_weight=".3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:alpha=".2"
                android:src="@drawable/background1"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="match_parent"/>
            <ImageView
                android:foregroundGravity="center"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="match_parent"
                android:src="@drawable/gtf_logo"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:layout_gravity="center"
            android:text="Register"

            android:textColor="@color/theme_green"
            android:fontFamily="@font/poppins500"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            app:cardBackgroundColor="@color/authEditTextBg"
            app:strokeWidth=".3dp"
            app:strokeColor="@color/authCardStrokeColor"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/user"/>

                <EditText
                    android:id="@+id/first_name"
                    android:ems="1"
                    android:inputType="text"
                    android:ellipsize="end"
                    android:textSize="@dimen/_10ssp"
                    android:hint="First Name*"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="15dp"
                    android:textColorHint="@color/authEditText"
                    android:textColor="@color/authEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                app:strokeWidth=".3dp"
                android:layout_alignParentEnd="true"
                app:cardBackgroundColor="@color/authEditTextBg"
                android:layout_gravity="end"
                app:strokeColor="@color/authCardStrokeColor"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/last_name"
                        android:ems="1"
                        android:inputType="text"
                        android:textSize="@dimen/_10ssp"
                        android:hint="Last Name*"
                        android:textColorHint="@color/authEditText"
                        android:textColor="@color/authEditText"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/gender_selection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="8dp"
            app:strokeWidth=".3dp"
            app:cardBackgroundColor="@color/authEditTextBg"
            app:strokeColor="@color/authCardStrokeColor">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gender_icon"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/male"/>

                <TextView
                    android:id="@+id/gender"
                    android:textSize="@dimen/_10ssp"
                    android:hint="Select Gender*"
                    android:textColorHint="@color/authEditText"
                    android:textColor="@color/authEditText"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="8dp"
            app:strokeWidth=".3dp"
            app:cardBackgroundColor="@color/authEditTextBg"
            app:strokeColor="@color/authCardStrokeColor">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/message"/>

                <EditText
                    android:id="@+id/email_id"
                    android:ellipsize="end"
                    android:ems="1"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_10ssp"
                    android:hint="Email*"
                    android:textColorHint="@color/authEditText"
                    android:textColor="@color/authEditText"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="8dp"
            app:strokeWidth=".3dp"
            app:cardBackgroundColor="@color/authEditTextBg"
            app:strokeColor="@color/authCardStrokeColor">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/date"/>

                <LinearLayout
                    android:id="@+id/open_date_picker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/dob"
                    android:textSize="@dimen/_10ssp"
                    android:hint="DOB*"
                    android:fontFamily="@font/poppins"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColorHint="@color/authEditText"
                    android:textColor="@color/authEditText"
                    android:includeFontPadding="false"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/forward"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="8dp"
            app:strokeWidth=".3dp"
            app:cardBackgroundColor="@color/authEditTextBg"
            app:strokeColor="@color/authCardStrokeColor">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/postal_code"
                    app:ccp_textSize="@dimen/_9ssp"
                    app:ccp_textGravity="CENTER"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_80sdp"
                    android:padding="@dimen/_1sdp"
                    app:ccp_contentColor="@color/authEditText"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:ccp_countryAutoDetectionPref="NETWORK_LOCALE" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_gravity="center_vertical"
                    android:layout_width="1dp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/number"
                    android:layout_gravity="center_vertical"
                    android:ems="1"
                    android:textSize="14sp"
                    android:hint="*********"
                    android:textColorHint="@color/authEditText"
                    android:textColor="@color/authEditText"
                    android:inputType="number"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:includeFontPadding="false"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/navigate_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:cardBackgroundColor="@color/theme_green"
            app:cardCornerRadius="8dp">

            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins500"
                android:text="NEXT"
                android:includeFontPadding="false"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>