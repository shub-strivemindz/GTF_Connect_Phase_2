<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:background="@color/background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:src="@drawable/back2"
            android:layout_marginStart="@dimen/_24sdp"
            app:tint="@color/theme_green"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contact Us"
            android:textColor="@color/theme_green"
            android:fontFamily="@font/poppins500"
            android:textSize="@dimen/_15ssp"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha=".4"/>

    <ImageView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="-4dp"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:src="@drawable/bot4"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="-1dp"
        app:cardBackgroundColor="@color/background"
        android:background="@color/background"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_40sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/_14sdp"
            android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            app:cardBackgroundColor="@color/contact_orange"
            app:cardCornerRadius="@dimen/_8sdp">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="match_parent"
                android:src="@drawable/phone"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="09672915757"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/_12sdp"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_marginVertical="@dimen/_14sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="1dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:cardBackgroundColor="@color/loc_blue"
                app:cardCornerRadius="@dimen/_8sdp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/location"
                    app:tint="@color/white" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:text="159, 3rd Floor,Rathore Nagar,Amrapali Cir,Vaishali Nagar,Jaipur, Rajasthan 302021"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_12sdp"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_marginVertical="@dimen/_14sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="1dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:cardBackgroundColor="@color/fb_blue"
                app:cardCornerRadius="@dimen/_8sdp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/facebook"
                    app:tint="@color/white" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="www.facebook.com"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_12sdp"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_marginVertical="@dimen/_14sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="1dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:cardBackgroundColor="@color/insta_pink"
                android:background="@color/insta_pink"
                app:cardCornerRadius="@dimen/_8sdp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/instgram"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="www.instagram.com"
                android:fontFamily="@font/montserrat"
                android:textSize="@dimen/_12sdp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>