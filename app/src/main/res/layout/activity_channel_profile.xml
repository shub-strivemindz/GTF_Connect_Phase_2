<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/groupChannelProfileBackgroundColor"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/groupChannelProfileActionBarBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">

        <ImageView
            android:id="@+id/back_click"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:src="@drawable/back2"
            android:layout_marginStart="@dimen/_16sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Edit Profile"
                android:gravity="center_vertical"
                android:id="@+id/edit_profile"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/_16sdp"/>


        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:id="@+id/logo_container"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/groupChannelProfileBackgroundColor"
            app:cardCornerRadius="@dimen/_180sdp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_180sdp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gtr_logo" />

            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Live Market Session"
            android:layout_below="@id/logo_container"
            android:textColor="@color/groupChannelProfileTitleTextColor"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_15ssp"
            android:textFontWeight="600"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/subscriber_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123,123"
            android:layout_below="@id/logo"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/theme_green"
            android:textFontWeight="400" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subscribers"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_below="@id/logo"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/theme_green"
                android:textFontWeight="400" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/group1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_below="@id/title2"
            android:layout_marginHorizontal="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_18sdp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/copy_link"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/groupChannelProfileCardBackgroundColor"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:src="@drawable/copy_link" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Copy Link"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/_9ssp"
                        android:gravity="center"
                        android:textColor="@color/theme_green"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/leave_channel"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/groupChannelProfileCardBackgroundColor"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:src="@drawable/leave" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Leave"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/_9ssp"
                        android:gravity="center"
                        android:textColor="@color/theme_green"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/mute_notification"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/groupChannelProfileCardBackgroundColor"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/notification_icon"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:src="@drawable/mute" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="Mute"
                        android:id="@+id/notificationText"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/_9ssp"
                        android:gravity="center"
                        android:textColor="@color/theme_green"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:id="@+id/tab_layout"
            android:layout_below="@id/group1"
            android:layout_width="match_parent"
            app:tabSelectedTextColor="@color/theme_green"
            app:tabTextColor="@color/groupChannelProfileTabTextColor"
            app:tabIndicatorColor="@color/theme_green"
            app:tabMode="auto"
            app:tabIndicatorFullWidth="false"
            app:tabRippleColor="@color/groupChannelProfileTabBackgroundColor"
            app:tabGravity="fill"
            android:background="@color/groupChannelProfileTabBackgroundColor"
            app:tabBackground="@color/groupChannelProfileTabBackgroundColor"
            app:tabTextAppearance="@style/profileTabTextAppearance"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Document" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Media"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"/>

        </com.google.android.material.tabs.TabLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_below="@id/tab_layout"
            android:alpha=".2"
            android:layout_height="1dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_6sdp"
            android:id="@+id/profile_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tab_layout"
            android:layout_marginBottom="@dimen/_20sdp"/>

    </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>