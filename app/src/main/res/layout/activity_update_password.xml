<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/userProfileBgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:background="@color/userProfileActionBar"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:src="@drawable/back2"
            android:layout_marginStart="@dimen/_24sdp"
            app:tint="@color/userProfileActionBarHeaderColor"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Update Password"
            android:textColor="@color/userProfileActionBarHeaderColor"
            android:fontFamily="@font/poppins500"
            android:textSize="@dimen/_15ssp"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha=".4"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/bot3"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth=".3dp"
        app:cardBackgroundColor="@color/authEditTextBg"
        app:strokeColor="@color/authCardStrokeColor">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="match_parent"
                android:src="@drawable/lock"/>

            <EditText
                android:textSize="14sp"
                android:hint="lisa@XYZ"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColorHint="@color/authEditText"
                android:textColor="@color/authEditText"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:background="@android:color/transparent"/>

            <ImageView
                android:id="@+id/confirm_password_toggle_switch"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="match_parent"
                android:src="@drawable/visible"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth=".3dp"
        app:cardBackgroundColor="@color/authEditTextBg"
        app:strokeColor="@color/authCardStrokeColor">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="match_parent"
                android:src="@drawable/lock"/>

            <EditText
                android:textSize="14sp"
                android:hint="New Password"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:textColorHint="@color/authEditText"
                android:textColor="@color/authEditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:background="@android:color/transparent"/>

            <ImageView
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="match_parent"
                android:src="@drawable/visible"/>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth=".3dp"
        app:cardBackgroundColor="@color/authEditTextBg"
        app:strokeColor="@color/authCardStrokeColor">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="match_parent"
                android:src="@drawable/lock"/>

            <EditText
                android:textSize="14sp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="@color/authEditText"
                android:textColor="@color/authEditText"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:background="@android:color/transparent"/>

            <ImageView
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="match_parent"
                android:src="@drawable/visible"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="40dp"
        app:cardBackgroundColor="@color/theme_green"
        app:cardCornerRadius="8dp">

        <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins500"
            android:text="UPDATE PASSWORD"
            android:includeFontPadding="false"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>