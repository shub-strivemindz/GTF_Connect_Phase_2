<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/userProfileBgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:background="@color/userProfileActionBar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:src="@drawable/back2"
            android:layout_marginStart="@dimen/_24sdp"
            app:tint="@color/userProfileActionBarHeaderColor"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Edit Profile"
            android:textColor="@color/userProfileActionBarHeaderColor"
            android:fontFamily="@font/poppins500"
            android:textSize="@dimen/_15ssp"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha=".4"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_1sdp"
                android:layout_alignParentStart="true"
                app:strokeWidth=".3dp"
                app:cardBackgroundColor="@color/authEditTextBg"
                app:strokeColor="@color/authCardStrokeColor"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/user"/>

                    <EditText
                        android:ems="1"
                        android:inputType="text"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/authEditText"
                        android:textColorHint="@color/authEditText"
                        android:hint="First Name*"
                        android:id="@+id/first_name"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:includeFontPadding="false"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                app:strokeWidth=".3dp"
                android:layout_margin="@dimen/_1sdp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                app:cardBackgroundColor="@color/authEditTextBg"
                app:strokeColor="@color/authCardStrokeColor"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/user"/>

                    <EditText
                        android:ems="1"
                        android:inputType="text"
                        android:textSize="@dimen/_10ssp"
                        android:hint="Last Name*"
                        android:textColor="@color/authEditText"
                        android:textColorHint="@color/authEditText"
                        android:id="@+id/last_name"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:id="@+id/gender_selection"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth=".3dp"
        app:cardBackgroundColor="@color/authEditTextBg"
        app:strokeColor="@color/authCardStrokeColor">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gender_icon"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="match_parent"
                android:src="@drawable/male"/>

            <TextView
                android:textSize="@dimen/_10ssp"
                android:hint="Male"
                android:fontFamily="@font/poppins"
                android:id="@+id/gender"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/authEditText"
                android:textColorHint="@color/authEditText"
                android:includeFontPadding="false"
                android:background="@android:color/transparent"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth=".3dp"
        app:cardBackgroundColor="@color/authEditTextBg"
        app:strokeColor="@color/authCardStrokeColor">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="match_parent"
                android:src="@drawable/message"/>

            <EditText
                android:textSize="@dimen/_10ssp"
                android:hint="Email*"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/authEditText"
                android:textColorHint="@color/authEditText"
                android:includeFontPadding="false"
                android:background="@android:color/transparent"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth=".3dp"
        android:id="@+id/choose_dob"
        app:cardBackgroundColor="@color/authEditTextBg"
        app:strokeColor="@color/authCardStrokeColor">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="match_parent"
                android:src="@drawable/date"/>

            <TextView
                android:textSize="@dimen/_10ssp"
                android:hint="DOB*"
                android:fontFamily="@font/poppins"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:layout_width="0dp"
                android:id="@+id/dob_title"
                android:layout_height="wrap_content"
                android:textColor="@color/authEditText"
                android:textColorHint="@color/authEditText"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"/>

            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="match_parent"
                android:src="@drawable/forward"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth=".3dp"
                app:cardBackgroundColor="@color/authEditTextBg"
                app:strokeColor="@color/authCardStrokeColor">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/postal_code"
                        app:ccp_textSize="@dimen/_9ssp"
                        app:ccp_textGravity="CENTER"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/_80sdp"
                        android:padding="@dimen/_1sdp"
                        android:layout_height="wrap_content"
                        app:ccp_contentColor="@color/authEditText"
                        android:gravity="center_vertical"
                        app:ccp_countryAutoDetectionPref="NETWORK_LOCALE" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_gravity="center_vertical"
                        android:layout_width="1dp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/number"
                        android:layout_gravity="center_vertical"
                        android:ems="1"
                        android:textSize="@dimen/_10ssp"
                        android:hint="*********"
                        android:inputType="number"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="12dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/authEditText"
                        android:textColorHint="@color/authEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:maxLength="10"
                        android:includeFontPadding="false"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth=".3dp"
                app:cardBackgroundColor="@color/authEditTextBg"
                app:strokeColor="@color/authCardStrokeColor">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/gst"/>

                    <EditText
                        android:textSize="@dimen/_10ssp"
                        android:hint="GST Number (Optional)"
                        android:id="@+id/gst_no"
                        android:textColor="@color/authEditText"
                        android:textColorHint="@color/authEditText"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth=".3dp"
                app:cardBackgroundColor="@color/authEditTextBg"
                app:strokeColor="@color/authCardStrokeColor">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/billing"/>

                    <EditText
                        android:textSize="@dimen/_10ssp"
                        android:hint="Billing Name (Optional)"
                        android:id="@+id/company_name"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/authEditText"
                        android:textColorHint="@color/authEditText"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth=".3dp"
                app:cardBackgroundColor="@color/authEditTextBg"
                app:strokeColor="@color/authCardStrokeColor">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/warning"/>

                    <EditText
                        android:textSize="@dimen/_10ssp"
                        android:hint="Additional Info (Optional)"
                        android:id="@+id/additional_info"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:textColor="@color/authEditText"
                        android:textColorHint="@color/authEditText"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="8dp"
                android:id="@+id/how_find_us"
                app:strokeWidth=".3dp"
                app:cardBackgroundColor="@color/authEditTextBg"
                app:strokeColor="@color/authCardStrokeColor">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/message"/>

                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:hint="How Did You Find Us"
                        android:id="@+id/how_find_us_text"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/authEditText"
                        android:textColorHint="@color/authEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="8dp"
                android:visibility="gone"
                android:id="@+id/how_find_us_other"
                app:strokeWidth=".3dp"
                app:cardBackgroundColor="@color/authEditTextBg"
                app:strokeColor="@color/authCardStrokeColor">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/message"/>

                    <EditText
                        android:textSize="@dimen/_10ssp"
                        android:hint="How Did You Find Us"
                        android:id="@+id/how_find_us_other_text"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/authEditText"
                        android:textColorHint="@color/authEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth=".3dp"
                app:cardBackgroundColor="@color/authEditTextBg"
                app:strokeColor="@color/authCardStrokeColor">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/place"/>

                    <TextView
                        android:textSize="@dimen/_10ssp"
                        android:hint="Address"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/authEditText"
                        android:textColorHint="@color/authEditText"
                        android:maxLines="1"
                        android:id="@+id/address"
                        android:includeFontPadding="false"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        app:strokeWidth=".3dp"
                        android:id="@+id/choose_country"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/authEditTextBg"
                        app:strokeColor="@color/authCardStrokeColor"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="match_parent"
                                android:src="@drawable/location_info"/>

                            <TextView
                                android:textSize="@dimen/_10ssp"
                                android:hint="Country*"
                                android:fontFamily="@font/poppins"
                                android:layout_marginStart="15dp"
                                android:id="@+id/country"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:includeFontPadding="false"
                                android:textColor="@color/authEditText"
                                android:textColorHint="@color/authEditText"
                                android:background="@android:color/transparent"/>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        app:strokeWidth=".3dp"
                        android:layout_margin="@dimen/_1sdp"
                        android:id="@+id/choose_state"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        app:cardBackgroundColor="@color/authEditTextBg"
                        app:strokeColor="@color/authCardStrokeColor"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/map_loc"/>

                            <TextView
                                android:textSize="@dimen/_10ssp"
                                android:hint="State*"
                                android:id="@+id/state"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/poppins"
                                android:layout_marginStart="15dp"
                                android:layout_width="match_parent"
                                android:textColor="@color/authEditText"
                                android:textColorHint="@color/authEditText"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:includeFontPadding="false"
                                android:background="@android:color/transparent"/>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:id="@+id/choose_city"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginEnd="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/authEditTextBg"
                        app:strokeColor="@color/authCardStrokeColor"
                        app:strokeWidth=".3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="match_parent"
                                android:src="@drawable/city" />

                            <TextView
                                android:id="@+id/city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/poppins"
                                android:hint="City*"
                                android:textColor="@color/authEditText"
                                android:textColorHint="@color/authEditText"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="130dp"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        app:strokeWidth=".3dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        app:cardBackgroundColor="@color/authEditTextBg"
                        app:strokeColor="@color/authCardStrokeColor"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
