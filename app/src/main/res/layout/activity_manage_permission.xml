<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_click"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:src="@drawable/back2"
            android:layout_marginStart="@dimen/_24sdp"
            app:tint="@color/theme_green"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Manage Permission"
            android:textColor="@color/theme_green"
            android:fontFamily="@font/poppins500"
            android:textSize="@dimen/_15ssp"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha=".4"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_14sdp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="400"
            android:textSize="@dimen/_10ssp"
            android:text="Send Messages"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/send_message_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:layout_marginEnd="@dimen/_14sdp"
            app:track="@drawable/switch_track"
            android:thumb="@drawable/switch_thumb" />

    </LinearLayout>


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:alpha=".2"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="400"
            android:textSize="@dimen/_10ssp"
            android:text="Send Media"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:id="@+id/send_media_switch"
            android:layout_marginEnd="@dimen/_14sdp"
            app:track="@drawable/switch_track"
            android:thumb="@drawable/switch_thumb" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:alpha=".2"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="400"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:textSize="@dimen/_10ssp"
            android:text="Send Stickers and GIFs"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:id="@+id/send_sticker_gif_switch"
            android:layout_marginEnd="@dimen/_14sdp"
            app:track="@drawable/switch_track"
            android:thumb="@drawable/switch_thumb" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:alpha=".2"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="400"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:textSize="@dimen/_10ssp"
            android:text="Embed Links"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:id="@+id/send_embed_link_switch"
            android:layout_marginEnd="@dimen/_14sdp"
            app:track="@drawable/switch_track"
            android:thumb="@drawable/switch_thumb" />

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:alpha=".2"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="400"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:textSize="@dimen/_10ssp"
            android:text="Pin Messages"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:id="@+id/pin_message_switch"
            android:layout_marginEnd="@dimen/_14sdp"
            app:track="@drawable/switch_track"
            android:thumb="@drawable/switch_thumb" />

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:alpha=".2"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="400"
            android:textSize="@dimen/_10ssp"
            android:text="Sharing Content"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:layout_marginEnd="@dimen/_14sdp"
            android:id="@+id/sharing_content_switch"
            app:track="@drawable/switch_track"
            android:thumb="@drawable/switch_thumb" />

    </LinearLayout>
</LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_14sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_24sdp"
                    android:fontFamily="@font/montserrat"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_10ssp"
                    android:text="Slow Mode"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="false"
                    android:id="@+id/slow_mode_switch"
                    android:layout_marginEnd="@dimen/_14sdp"
                    app:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:id="@+id/slow_mode_option_container"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/slow_mode_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp">

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:alpha=".2"
                android:layout_height="1dp"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/gap_10"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:buttonTint="@color/radioButtonDefaultColor"
                    android:text="After 10 sec"
                    android:button="@drawable/radio_button_inset"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/tab_grey"
                    android:fontFamily="@font/poppins"
                    android:textFontWeight="400"
                    android:paddingStart="@dimen/_12sdp"
                    android:textSize="@dimen/_10ssp"
                    />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:alpha=".2"
                    android:layout_height="1dp"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/gap_30"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/radio_button_inset"
                    android:layout_height="0dp"
                    android:buttonTint="@color/radioButtonDefaultColor"
                    android:text="After 30 sec"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/tab_grey"
                    android:fontFamily="@font/poppins"
                    android:textFontWeight="400"
                    android:paddingStart="@dimen/_12sdp"
                    android:textSize="@dimen/_10ssp"
                    />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:alpha=".2"
                    android:layout_height="1dp"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/gap_1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:button="@drawable/radio_button_inset"
                    android:buttonTint="@color/radioButtonDefaultColor"
                    android:text="After 1 min"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/tab_grey"
                    android:fontFamily="@font/poppins"
                    android:textFontWeight="400"
                    android:paddingStart="@dimen/_12sdp"
                    android:textSize="@dimen/_10ssp"
                    />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:alpha=".2"
                android:layout_height="1dp"/>


                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/gap_5"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:buttonTint="@color/radioButtonDefaultColor"
                    android:layout_height="0dp"
                    android:button="@drawable/radio_button_inset"
                    android:text="After 5 min"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/tab_grey"
                    android:fontFamily="@font/poppins"
                    android:textFontWeight="400"
                    android:paddingStart="@dimen/_12sdp"
                    android:textSize="@dimen/_10ssp"
                    />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:alpha=".2"
                    android:layout_height="1dp"/>


                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/gap_24"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:button="@drawable/radio_button_inset"
                    android:text="After 24 hours"
                    android:buttonTint="@color/radioButtonDefaultColor"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/tab_grey"
                    android:fontFamily="@font/poppins"
                    android:textFontWeight="400"
                    android:paddingStart="@dimen/_12sdp"
                    android:textSize="@dimen/_10ssp"
                    />

                </RadioGroup>

            </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:alpha=".2"
                    android:layout_height="1dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:id="@+id/update_permission"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/theme_green"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins500"
                        android:text="UPDATE"
                        android:includeFontPadding="false"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>