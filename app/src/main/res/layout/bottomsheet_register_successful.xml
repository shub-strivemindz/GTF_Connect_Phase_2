<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/bot"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_140sdp"
            android:src="@drawable/bot"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>
        
        <TextView
            android:id="@+id/thanks_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thankyou"
            android:textStyle="bold"
            android:textColor="@color/theme_green"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="500"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/bot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/comment_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Registered Successfully"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="500"
        android:textSize="13sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/thanks_tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toBottomOf="@id/comment_tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:id="@+id/login_button"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:cardBackgroundColor="@color/theme_green"
        app:cardCornerRadius="8dp">

        <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins500"
            android:text="LOGIN"
            android:includeFontPadding="false"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>