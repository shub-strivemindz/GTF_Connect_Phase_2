<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="@dimen/_150sdp">

<LinearLayout
    android:background="@drawable/message_sent_background"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_40sdp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal">

    <ImageView
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="match_parent"
        android:src="@drawable/quote" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Quote"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textFontWeight="600"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:gravity="center" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:alpha=".2"
        app:dividerColor="@color/white"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:text="Half Join and play full  Membership in Lowest price,
more then 1000 top most trading courses+ daily or "
            android:gravity="center_vertical" />

        <TextView
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/theme_green"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:text="Live Market Session?"
            android:gravity="center" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:alpha=".2"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="@dimen/_8sdp"
            android:id="@+id/sign_out"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="lisa Harper, Today at 11am"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_9ssp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/cancel"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_9ssp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Today 10:20 am,"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="center_vertical"
            android:layout_gravity="end"/>

    </LinearLayout>


</LinearLayout>
<ImageView
    android:layout_marginBottom="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_54sdp"
    android:layout_alignParentBottom="true"
    android:layout_width="@dimen/_16sdp"
    android:layout_height="@dimen/_16sdp"
    android:src="@drawable/emoji"/>
</RelativeLayout>

