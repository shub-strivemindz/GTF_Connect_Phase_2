<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/_18sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/quote"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_gravity="center"
        app:tint="@color/theme_green" />
    
    
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        app:dividerColor="@color/theme_green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/theme_green"
            android:textSize="@dimen/_11sdp"
            android:gravity="center"
            android:text="Quote"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textColor="#B3666666"
            android:text="half join and then pay full Regarding Primium Membership in Lowest price,
more then 1000 top most trading courses+ daily or weekly"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal">
        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="#80666666"
            android:textSize="@dimen/_11sdp"
            android:text="Lisa Harper, "/>


            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingStart="@dimen/_2sdp"
                android:textColor="#80666666"
                android:textSize="@dimen/_11sdp"
                android:text="Today at 10.30 am"/>

            <ImageView
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_gravity="start"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="match_parent"
                android:src="@drawable/double_tick"
                app:tint="@color/theme_green" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>