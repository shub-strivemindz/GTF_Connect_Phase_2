<RelativeLayout android:id="@+id/post_image_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_280sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/post_media_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:scaleType="centerCrop"
                />

            <RelativeLayout
                android:id="@+id/play_video"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_point"/>

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:layout_centerInParent="true"
                    android:elevation="@dimen/_2sdp"
                    android:src="@drawable/play" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/doc_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/pdf_image"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/doc_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:background="#33000000"
                android:text=".trsdgt.125412541.gtf.Doucment.pdf"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_10ssp"/>

        </LinearLayout>


        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:controller_layout_id="@layout/custom_controller"
            app:hide_on_touch="true"
            app:resize_mode="fit"
            app:show_timeout="5000"
            app:surface_type="texture_view" />

        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/progress_bar"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>
        
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_120sdp"
            app:cardElevation="@dimen/_20sdp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#80000000"
            android:id="@+id/play_gif">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="GIF"
                android:gravity="center"
                android:textColor="@color/white"/>
        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>