<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/theme_green"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:paddingHorizontal="@dimen/_24sdp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_click"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:src="@drawable/back2" />

        <RelativeLayout
            android:id="@+id/member_title"
            android:layout_toEndOf="@id/back_click"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/user_avatar"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                    android:background="#fff"
                    android:src="@drawable/gtf_logo"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/user_avatar"
                android:gravity="center_vertical">
                <TextView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textFontWeight="600"
                    android:text="Live Market Session"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    />

                <TextView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_below="@id/user_name"
                    android:id="@+id/user_subscribers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textSize="@dimen/_10ssp"
                    android:textFontWeight="400"
                    android:text="1,402,345"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_below="@id/user_name"
                    android:layout_toEndOf="@id/user_subscribers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_10ssp"
                    android:text="subscribers"
                    android:textColor="@color/white"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pin"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/pin_image"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/pinned"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:backgroundTint="@color/card_yellow"
                    android:background="@drawable/notification_circle"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp"/>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/theme_green"
            android:layout_height="match_parent">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="JOIN"
               android:background="@color/theme_green"
               android:fontFamily="@font/poppins"
               android:textSize="@dimen/_15ssp"
               android:textColor="@color/white"
               android:gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>