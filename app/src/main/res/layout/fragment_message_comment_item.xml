<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/commentBackgroundColor"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_16sdp"
            android:id="@+id/comment_profile_container"
            app:cardCornerRadius="@dimen/_80sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/comment_profile_pic"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/commentDialogBackgroundColor"
            android:layout_marginStart="@dimen/_8sdp"
            app:cardElevation="0dp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            android:id="@+id/comment_container_card"
            android:layout_toEndOf="@id/comment_profile_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/comment_user"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Amenda Lapasis"
                        android:textColor="@color/channelCommentUserColor"
                        android:textStyle="bold"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:id="@+id/comment_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27 Feb, 2023"
                        android:textColor="@color/channelCommentTimeStampColor"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/_9ssp"/>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/comment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                    android:textColor="@color/channelCommentTextColor"
                    android:fontFamily="@font/open_sans"
                    android:textSize="@dimen/_10ssp"/>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_below="@id/comment_container_card"
            android:id="@+id/edit_container"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_54sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit"
                android:gravity="center_vertical|bottom"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_24sdp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Edit"
                android:textColor="@color/commentFooterTextColor"
                android:textSize="@dimen/_9ssp"/>

            <TextView
                android:gravity="center_vertical|bottom"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="|"
                android:textColor="@color/commentFooterTextColor"
                android:layout_marginEnd="@dimen/_8sdp"
                android:textSize="@dimen/_9ssp"/>

            <TextView
                android:id="@+id/delete"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="center_vertical|bottom"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"

                android:text="Delete"
                android:textColor="@color/commentFooterTextColor"
                android:textSize="@dimen/_9ssp"/>

        </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:alpha=".2"
        android:layout_below="@id/edit_container"
        app:dividerColor="@color/commentDividerColor"
        android:layout_marginVertical="@dimen/_8sdp"
        android:layout_height="@dimen/_2sdp"/>

</RelativeLayout>