<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/close"
        app:tint="@color/white"
        android:layout_margin="@dimen/_16sdp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/_80sdp"
        android:scaleType="centerInside"
        android:id="@+id/preview"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/send_message"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/send_message"
            android:layout_alignParentEnd="true"/>

        <LinearLayout
            android:id="@+id/footer_search_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_32sdp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardElevation="0dp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardBackgroundColor="@color/gifPreviewSearch"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/message_text_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.gtfconnect.utilities.CustomEditText
                            android:id="@+id/type"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:hint="Add a caption...."
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:paddingStart="@dimen/_12sdp"
                            android:fontFamily="@font/poppins"
                            android:textSize="@dimen/_10ssp"
                            android:background="@android:color/transparent"/>

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>