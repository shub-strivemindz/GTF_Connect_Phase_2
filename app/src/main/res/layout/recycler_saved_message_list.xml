<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/groupBackgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_below="@id/date_chip_container"
        android:elevation="1dp"
        android:layout_marginVertical="@dimen/_4sdp"
        android:id="@+id/sent_message_container"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/group_message_sent_background"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/message_container1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/message1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/white"
                        android:text="half join and then pay full Regarding Primium Membership in Lowest price,
more then 1000 top most trading courses+ daily or weekly"/>

                </RelativeLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:alpha=".5"
                    android:id="@+id/message_divider1"
                    android:layout_marginVertical="@dimen/_5sdp"
                    app:dividerColor="@color/white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/media_recycler1"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_below="@id/message_container1"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:id="@+id/audio_container1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/theme_green"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:src="@drawable/download_file"
                            android:visibility="gone"
                            app:tint="@color/white"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:id="@+id/download_audio1"/>

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/play"
                            app:tint="@color/white"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:id="@+id/play_pause_recorded_audio1"/>

                        <com.airbnb.lottie.LottieAnimationView
                            android:visibility="gone"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:id="@+id/downloader_loader1"/>

                    </RelativeLayout>

                    <com.example.audiowaveform.WaveformSeekBar
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="@dimen/_4sdp"
                        android:layout_weight="1"
                        app:waveProgressColor="@color/white"
                        android:layout_marginVertical="@dimen/_8sdp"
                        android:layout_height="match_parent"
                        android:id="@+id/waveForm1"/>

                    <LinearLayout
                        android:id="@+id/audio_time_container1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="00"
                            android:id="@+id/start_time_counter1"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_9ssp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="/01:30"
                            android:id="@+id/total_audio_time1"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_9ssp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="@dimen/_10sdp"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/volume"
                        app:tint="@color/white"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:id="@+id/volume_switch1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:scaleX=".8"
                        android:id="@+id/select_post1"
                        android:scaleY=".8"
                        android:buttonTint="@color/white"
                        android:visibility="gone"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="10:20 am,"
                        android:id="@+id/time1"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9ssp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/date_chip_container"
        android:layout_marginVertical="@dimen/_4sdp"
        android:id="@+id/received_message_container"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:elevation="1dp"
        android:clickable="true"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:background="@drawable/group_message_received_background"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/user_container"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_alignParentStart="true"
                            android:orientation="horizontal">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:layout_gravity="center_vertical"
                                app:cardCornerRadius="@dimen/_80sdp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:id="@+id/user_icon"/>

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Lina Harper"
                                android:maxLines="1"
                                android:textColor="@color/groupChatUserTextColor"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_10ssp"
                                android:textStyle="bold"
                                android:fontFamily="@font/open_sans"/>

                        </LinearLayout>


                        <TextView
                            android:layout_toEndOf="@id/user_container"
                            android:layout_toStartOf="@id/select_post"
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="27 Feb 2023"
                            android:gravity="center_vertical"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textColor="@color/groupChatLightTextColor"
                            android:textSize="@dimen/_8ssp"
                            android:fontFamily="@font/open_sans"/>


                        <CheckBox
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:scaleX=".8"
                            android:id="@+id/select_post"
                            android:visibility="gone"
                            android:scaleY=".8"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:buttonTint="@color/theme_green"
                            android:layout_marginEnd="@dimen/_16sdp" />

                    </RelativeLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:alpha=".2"
                        android:layout_below="@id/header"
                        android:id="@+id/header_divider"
                        android:layout_marginHorizontal="@dimen/_16sdp"/>

                    <RelativeLayout
                        android:layout_below="@id/header_divider"
                        android:id="@+id/message_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/open_sans"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/groupChatTextColor"
                            android:text="half join and then pay full Regarding Primium Membership in Lowest price,
more then 1000 top most trading courses+ daily or weekly"/>

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/media_recycler"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_below="@id/message_container"
                        android:layout_height="wrap_content"/>



                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/audio_container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/groupChatBoxBackgroundColor"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">


                            <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:src="@drawable/download_file"
                                app:tint="@color/audioPlayTint"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:id="@+id/download_audio"/>

                            <ImageView
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/play"
                                android:visibility="gone"
                                app:tint="@color/audioPlayTint"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:id="@+id/play_pause_recorded_audio"/>

                            <com.airbnb.lottie.LottieAnimationView
                                android:visibility="gone"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_centerVertical="true"
                                android:id="@+id/downloader_loader"/>

                        </RelativeLayout>

                        <com.example.audiowaveform.WaveformSeekBar
                            android:layout_width="0dp"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:layout_weight="1"
                            app:waveProgressColor="@color/theme_green"
                            android:layout_marginVertical="@dimen/_8sdp"
                            android:layout_height="match_parent"
                            android:id="@+id/waveForm"/>

                        <LinearLayout
                            android:id="@+id/audio_time_container"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="00"
                                android:id="@+id/start_time_counter"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="@dimen/_9ssp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="/01:30"
                                android:id="@+id/total_audio_time"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="@dimen/_9ssp"
                                android:textColor="@color/black"
                                android:layout_marginEnd="@dimen/_10sdp"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/volume"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:id="@+id/volume_switch"/>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--        <LinearLayout
                        android:background="@color/card_light_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp"
                        android:id="@+id/high_white_spacer"
                        android:orientation="horizontal"/>

                    <LinearLayout
                        android:background="@color/card_light_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp"
                        android:id="@+id/low_white_spacer"
                        android:orientation="horizontal"/>-->

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>