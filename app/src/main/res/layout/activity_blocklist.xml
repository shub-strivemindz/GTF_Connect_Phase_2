<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blocklistBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:id="@+id/toolbar"
        android:background="@color/userProfileActionBar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:src="@drawable/back2"
            android:layout_marginStart="@dimen/_24sdp"
            app:tint="@color/theme_green"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Blocklist"
            android:textColor="@color/theme_green"
            android:fontFamily="@font/poppins500"
            android:textSize="@dimen/_15ssp"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/toolbar"

        android:alpha=".4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/search_container"
        android:layout_below="@id/toolbar"
        android:paddingHorizontal="@dimen/_24sdp"
        android:orientation="horizontal">


        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/open_sans"
            android:textFontWeight="400"
            android:textSize="@dimen/_10ssp"
            android:text="Total Blocked Users - "/>


        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_10ssp"
            android:textFontWeight="400"
            android:layout_height="match_parent"
            android:id="@+id/blocked_count"
            android:text="12345"/>

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            app:tint="@color/theme_green"
            android:src="@drawable/search"/>

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/search_container"
        android:alpha=".4"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/blocklist_recycler"
        android:layout_width="match_parent"
        android:layout_below="@id/search_container"
        android:layout_height="match_parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_data_found"
        android:text="No data found"
        android:textColor="@color/blocklistTitleColor"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        />

</RelativeLayout>